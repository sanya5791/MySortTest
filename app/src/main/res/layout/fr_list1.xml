<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ua.sanya5791.mysorttest.FrList">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Worker"
        android:id="@+id/bt_add_worker"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort List By..."
        android:id="@+id/bt_sort_list1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bt_add_worker"
        android:layout_toEndOf="@+id/bt_add_worker" />


    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_add_worker" />

</RelativeLayout>
